<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context=".Register.registerActivity">

        <ImageView
            android:id="@+id/registerBackGround"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:contentDescription="Register Background"
            android:scaleType="fitXY"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0"
            app:srcCompat="@drawable/registerbackground" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/profileImageView"
            android:layout_width="@dimen/_160sdp"
            android:layout_height="@dimen/_160sdp"
            android:layout_marginTop="@dimen/_30sdp"
            android:onClick="pickImage"
            android:src="@drawable/unknown_profile"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/userNickNameText"
            android:layout_width="@dimen/_200sdp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_50sdp"
            android:background="@drawable/register_text_view"
            android:hint="Nick Name"
            android:padding="@dimen/_6sdp"
            android:inputType="textNoSuggestions|textPersonName"
            android:singleLine="true"
            android:textColor="#000000"
            android:textColorHint="#575555"
            android:textSize="@dimen/_13ssp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/profileImageView"
            app:layout_constraintEnd_toEndOf="parent"
            android:textCursorDrawable="@drawable/cursor_color"
            android:importantForAutofill="no" />

        <EditText
            android:id="@+id/userEmailAddressText"
            android:layout_width="@dimen/_200sdp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_15sdp"
            android:background="@drawable/register_text_view"
            android:hint="Email"
            android:padding="@dimen/_6sdp"
            android:inputType="textNoSuggestions|textEmailAddress"
            android:singleLine="true"
            android:textColor="#000000"
            android:textColorHint="#575555"
            android:textSize="@dimen/_13ssp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/userNickNameText"
            app:layout_constraintEnd_toEndOf="parent"
            android:textCursorDrawable="@drawable/cursor_color"
            android:importantForAutofill="no" />

        <EditText
            android:id="@+id/userPasswordText"
            android:layout_width="@dimen/_200sdp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_15sdp"
            android:background="@drawable/register_text_view"
            android:hint="Password"
            android:padding="@dimen/_6sdp"
            android:inputType="textNoSuggestions|textPassword"
            android:singleLine="true"
            android:textColor="#000000"
            android:textColorHint="#575555"
            android:textSize="@dimen/_13ssp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/userEmailAddressText"
            app:layout_constraintEnd_toEndOf="parent"
            android:textCursorDrawable="@drawable/cursor_color"
            android:importantForAutofill="no" />

        <EditText
            android:id="@+id/userConfirmPasswordText"
            android:layout_width="@dimen/_200sdp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_15sdp"
            android:background="@drawable/register_text_view"
            android:hint="Confirm Password"
            android:padding="@dimen/_6sdp"
            android:inputType="textNoSuggestions|textPassword"
            android:singleLine="true"
            android:textColor="#000000"
            android:textColorHint="#575555"
            android:textSize="@dimen/_13ssp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/userPasswordText"
            app:layout_constraintEnd_toEndOf="parent"
            android:textCursorDrawable="@drawable/cursor_color"
            android:importantForAutofill="no" />

        <TextView
            android:id="@+id/passwordStrengthText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Password Strength"
            android:layout_marginTop="@dimen/_15sdp"
            android:layout_marginStart="@dimen/_15sdp"
            android:textColor="#FFFFFFFF"
            android:textSize="@dimen/_13ssp"
            app:layout_constraintTop_toBottomOf="@+id/userConfirmPasswordText"
            app:layout_constraintStart_toStartOf="parent" />

        <ProgressBar
            android:id="@+id/passwordStrengthBar"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="@dimen/_170sdp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_5sdp"
            android:layout_marginTop="@dimen/_20sdp"
            android:max="100"
            android:progress="0"
            app:layout_constraintStart_toEndOf="@id/passwordStrengthText"
            app:layout_constraintTop_toBottomOf="@id/userConfirmPasswordText" />

        <TextView
            android:id="@+id/passwordStrengthParcent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_85sdp"
            android:layout_marginTop="@dimen/_18sdp"
            android:textSize="@dimen/_11ssp"
            android:textColor="#FFFFFF"
            app:layout_constraintStart_toEndOf="@id/passwordStrengthText"
            app:layout_constraintTop_toBottomOf="@id/userConfirmPasswordText" />

        <Button
            android:id="@+id/registerButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_20sdp"
            android:background="@drawable/register_button"
            android:onClick="Register"
            android:soundEffectsEnabled="false"
            android:text="Register!"
            android:textColor="#DDDCDC"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/passwordStrengthBar" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>