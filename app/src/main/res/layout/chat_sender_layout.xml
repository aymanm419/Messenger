<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/textMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginEnd="@dimen/_5sdp"
        android:layout_toStartOf="@+id/profilePicture"
        android:background="@drawable/receivingtext_border"
        android:gravity="end"
        android:maxWidth="@dimen/_220sdp"
        android:padding="@dimen/_6sdp"
        android:textColor="#000000"
        android:textSize="@dimen/_14ssp" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profilePicture"
        android:layout_width="@dimen/_40sdp"
        android:layout_height="@dimen/_40sdp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="@dimen/_5sdp"
        android:layout_marginEnd="@dimen/_5sdp"
        android:src="@drawable/unknown_profile" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/seenImage"
        android:layout_width="@dimen/_15sdp"
        android:layout_height="@dimen/_15sdp"
        android:layout_alignBottom="@+id/textMessage"
        android:layout_toStartOf="@+id/textMessage"
        android:src="@drawable/deliveredcheckmark" />
</RelativeLayout>